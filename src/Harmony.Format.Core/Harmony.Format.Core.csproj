<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Harmony Response Format Core Library</Title>
    <Authors>Eduardo Sobrino</Authors>
    <PackageOutputPath>c:\NuGetLocalFeed</PackageOutputPath>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>1.0.2</Version>
    <RootNamespace>Harmony.Format</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Execution\Api\HarmonyExecutionService.Api.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="Execution\Api\HarmonyExecutionService.Api.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="JsonSchema.Net" Version="8.0.4" />
    <PackageReference Include="JsonSchema.Net.Data" Version="8.0.0" />
  </ItemGroup>

</Project>
